<div class="max-w-lg mx-auto p-2">
<p>Your resumes</p>
<div class="bg-white shadow border p-4 m-2 rounded">
  <% @resumes.each do |resume| %>
    <div class="mb-4 underline text-blue-400 hover:text-blue-300">
      <%= link_to resume_path(resume) do %>
        <%= resume.name %> - <%= resume.created_at.strftime('%Y-%m-%d') %>
      <% end %>
    </div>
  <% end %>
  <%= link_to 'New resume', new_resume_path, class: 'block text-center underline text-blue-400 hover:text-blue-300' %>
</div>
</div>
