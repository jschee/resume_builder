<% if @resume.author.present? %>
  <div class="text-2xl text-center font-semibold"><%= @resume.author.first_name %> <%= @resume.author.last_name %></div>
  <div class="text-center">
    <div><%= @resume.author.title %></div>
    <div class="inline-flex">
      <div><%= @resume.author.phone_number %></div>
      <div class="mx-2">·</div>
      <div><%= @resume.author.email %></div>
      <div class="mx-2">·</div>
      <div><%= @resume.author.website %></div>
    </div>
  </div>
  <div class="my-2">
    <%= @resume.author.bio %>
  </div>
<% end %>
